import React from 'react'
import { Carousel } from 'react-responsive-carousel'
import 'react-responsive-carousel/lib/styles/carousel.min.css'
import { motion } from 'framer-motion'
import { styles } from '../styles'
import { SectionWrapper } from '../hoc'
import { fadeIn, textVariant } from '../utils/motion'
import { testimonials } from '../constants'

const FeedbackCard = ({ testimonial, name, designation, company, image }) => (
    <div className='bg-black-200 p-10 rounded-3xl xs:w-[320px] w-full border-x-2 border-x-indigo-500 shadow shadow-xl bg-third' style={{ margin: '100px' }}>
        <p className="text-white font-black text-[48px]">"</p>
        <div className="mt-1">
            <p className="text-white tracking-wider text-[18px]">{testimonial}</p>
            <div className="mt-7 flex justify-between items-center gap-1">
                <div className="flex flex-col">
                    <p className="text-white font-medium text-[16px]">
                        <span className="blue-text-gradient">@</span> {name}
                    </p>
                    <p className="text-secondary text-[12px]">
                        {designation} of {company}
                    </p>
                </div>
                <img
                    src={image}
                    alt={`feedback-by-${name}`}
                    className='w-10 h-15 rounded-full object-cover'
                />
            </div>
        </div>
    </div>
)


const Feedbacks = () => {
    return (
        <div className="mt-12 bg-black-100 rounded-[20px]">
            <div className={`${styles.padding} bg-tertiary rounded-2xl min-h-[300px] border-b-4 border-b-indigo-500`}>
                <motion.div variants={textVariant()}>
                    <p className={styles.sectionSubText}>What others say</p>
                    <h2 className={styles.sectionHeadText}>Testimonials.</h2>
                </motion.div>
            </div>
            <Carousel
                showStatus={false}
                thumbWidth={160}
                showArrows={true}
                emulateTouch={true}
                infiniteLoop={true}
                centerMode={true}
                centerSlidePercentage={33.33}
                dynamicHeight={false}
                useKeyboardArrows={true}
                className={`${styles.paddingX} -mt-20 pb-14 flex flex-wrap gap-7`}
                renderArrowPrev={(onClickHandler) => (
                    <button onClick={onClickHandler} className='absolute z-10 left-0 top-1/2 -translate-y-1/2 cursor-pointer bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-full shadow-md'
                    >
                        Previous
                    </button>
                )}
                renderArrowNext={(onClickHandler) => (
                    <button onClick={onClickHandler} className='absolute z-10 right-0 top-1/2 -translate-y-1/2 cursor-pointer bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-full shadow-md'
                    >
                        Next
                    </button>
                )}
            >
                {testimonials.map((testimonial, index) => (
                    <FeedbackCard key={testimonial.name} {...testimonial} />
                ))}
            </Carousel>
        </div>
    )
}

export default SectionWrapper(Feedbacks, "")
